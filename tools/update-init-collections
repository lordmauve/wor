#!/bin/sh

function update_init()
{
        ( update_init_impl $1 )
}

function update_init_impl()
{
        cd $1
        echo '# Automatically generated by tools/update-init-collections' >__init__.py
        for file in *.py; do
                if [ $file != __init__.py ]; then
                        class=${file%.py}
                        echo from $class import $class >>__init__.py
                fi
        done
}

update_init content/Items
